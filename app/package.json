{
  "name": "portal",
  "version": "0.0.0",
  "author": "Pavel Agarkov",
  "scripts": {
    "start": "ng serve",
    "start:hmr": "ng serve -c hmr --port 7000",
    "start:ssr": "node dist/portal-server",
    "lint": "ng lint",
    "generate:prerender": "cd dist && node portal-prerender",
    "copy:assets:shared": "cp -r ./projects/shared/src/styles ./dist/shared && cp -r ./projects/shared/src/assets ./dist/shared",
    "───DEV───": "#─────────────────DEV─────────────────────────#",
    "build:dev": "ng run portal:build:debug && npm run sm:browser && npm run build:dev:server",
    "build:dev:libs": "npm run clean:dist && npm run build:dev:testing && npm run build:dev:core && npm run build:dev:shared && npm run build:dev:schemes",
    "build:dev:testing": "ng build testing",
    "build:dev:core": "ng build core",
    "build:dev:shared": "ng build shared && npm run copy:assets:shared",
    "build:dev:schemes": "ng build schemes",
    "build:dev:server": "ng run portal:server:debug && npm run sm:server && npm run webpack:dev:server && npm run generate:prerender",
    "webpack:dev:server": "webpack --progress --colors --display-error-details",
    "sm:browser": "sed -i 's~webpack:///~~g' ./dist/portal-browser/main.js.map",
    "sm:server": "sed -i 's~webpack:///~~g' ./dist/portal-server/main.js.map",
    "sm:libs": "find ./dist/ -type f -name '*.js.map' | xargs sed -i 's~ng://\\([[:alpha:]]*\\)~./projects/\\1/src~g'",
    "───PROD──": "#─────────────────PROD────────────────────────#",
    "build:prod": "ng build --prod && npm run build:prod:server",
    "build:prod:libs": "npm run clean:dist && npm run build:dev:testing && npm run build:prod:core && npm run build:prod:shared && npm run build:prod:schemes",
    "build:prod:core": "ng build core --prod",
    "build:prod:shared": "ng build shared --prod && npm run copy:assets:shared",
    "build:prod:schemes": "ng build schemes --prod",
    "build:prod:server": "ng run portal:server:production && npm run webpack:prod:server && npm run generate:prerender",
    "webpack:prod:server": "webpack --env.prod",
    "──DEBUG──": "#────────────────DEBUG────────────────────────#",
    "debug:ssr": "node --inspect-brk=9229 dist/portal-server",
    "debug:prerender": "cd dist && node --inspect-brk=9229 portal-prerender",
    "──TESTS──": "#────────────────TESTS────────────────────────#",
    "test": "ng test portal",
    "test:schemes": "ng test schemes",
    "test:core": "ng test core",
    "test:shared": "ng test shared",
    "test:ci": "ng test portal --watch=false --no-progress --code-coverage=true --browsers ChromeCI",
    "test:ci:libs": "npm run test:schemes -- --watch=false --no-progress --code-coverage=true --browsers ChromeCI && npm run test:core -- --watch=false --no-progress --code-coverage=true --browsers ChromeCI && npm run test:shared -- --watch=false --no-progress --code-coverage=true --browsers ChromeCI",
    "───E2E───": "#─────────────────E2E─────────────────────────#",
    "e2e": "ng e2e",
    "e2e:ci": "ng e2e --prod",
    "──CLEAN──": "#────────────────CLEAN────────────────────────#",
    "clean": "npm run clean:dist && npm run clean:coverage",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.7",
    "@angular/cdk": "^6.4.7",
    "@angular/common": "^6.1.7",
    "@angular/compiler": "^6.1.7",
    "@angular/core": "^6.1.7",
    "@angular/flex-layout": "^6.0.0-beta.18",
    "@angular/forms": "^6.1.7",
    "@angular/http": "^6.1.7",
    "@angular/material": "^6.4.7",
    "@angular/platform-browser": "^6.1.7",
    "@angular/platform-browser-dynamic": "^6.1.7",
    "@angular/platform-server": "^6.1.7",
    "@angular/router": "^6.1.7",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^6.1.0",
    "@ngrx/entity": "^6.1.0",
    "@ngrx/router-store": "^6.1.0",
    "@ngrx/store": "^6.1.0",
    "@ngrx/store-devtools": "^6.1.0",
    "@nguniversal/common": "^6.1.0",
    "@nguniversal/express-engine": "^6.1.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.1.0",
    "@types/compression": "^0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "apollo-angular": "^1.3.0",
    "apollo-angular-link-http": "^1.2.0",
    "apollo-cache-inmemory": "^1.2.10",
    "apollo-client": "^2.4.2",
    "apollo-link-context": "^1.0.9",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.5.7",
    "domino": "^2.1.0",
    "express-session": "^1.15.6",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.9.2",
    "hammerjs": "^2.0.8",
    "memorystore": "^1.6.0",
    "mkdirp": "^0.5.1",
    "ngx-cookie-service": "^1.0.10",
    "ngx-infinite-scroll": "^6.0.1",
    "ngx-pipes": "^2.3.5",
    "openid-client": "^2.3.1",
    "rxjs": "^6.3.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.2",
    "@angular-devkit/build-ng-packagr": "~0.8.2",
    "@angular/cli": "^6.2.2",
    "@angular/compiler-cli": "^6.1.7",
    "@angular/language-service": "^6.1.7",
    "@angularclass/hmr": "^2.1.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "~8.9.4",
    "codelyzer": "^4.4.4",
    "jasmine-core": "~3.2.1",
    "jasmine-marbles": "^0.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.4",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "~1.3.1",
    "ng-packagr": "^4.1.1",
    "protractor": "~5.4.1",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^5.1.1",
    "ts-node": "~7.0.1",
    "tsickle": ">=0.25.5",
    "tslib": "^1.9.3",
    "tslint": "~5.11.0",
    "typescript": "2.9.2",
    "webpack-cli": "^3.1.0"
  }
}
