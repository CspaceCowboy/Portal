{
  "name": "portal",
  "version": "0.0.0",
  "author": "Pavel Agarkov",
  "scripts": {
    "start": "ng serve",
    "start:hmr": "ng serve -c hmr --port 7000",
    "start:ssr": "node dist/portal-server",
    "lint": "ng lint",
    "generate:prerender": "cd dist && node portal-prerender",
    "copy:assets:shared": "cp -r ./projects/shared/src/styles ./dist/shared && cp -r ./projects/shared/src/assets ./dist/shared",
    "───DEV───": "#─────────────────DEV─────────────────────────#",
    "build:dev": "npm run build:dev:libs && ng run portal:build:debug && npm run sm:browser && npm run build:dev:server",
    "build:dev:libs": "npm run build:dev:core && npm run build:dev:shared && npm run build:dev:schemes",
    "build:dev:core": "ng build core",
    "build:dev:shared": "ng build shared && npm run copy:assets:shared",
    "build:dev:schemes": "ng build schemes",
    "build:dev:server": "ng run portal:server:debug && npm run sm:server && npm run webpack:dev:server && npm run generate:prerender",
    "webpack:dev:server": "webpack --progress --colors",
    "sm:browser": "sed -i 's~webpack:///~~g' ./dist/portal-browser/main.js.map",
    "sm:server": "sed -i 's~webpack:///~~g' ./dist/portal-server/main.js.map",
    "sm:libs": "find ./dist/ -type f -name '*.js.map' | xargs sed -i 's~ng://\\([[:alpha:]]*\\)~./projects/\\1/src~g'",
    "───PROD──": "#─────────────────PROD────────────────────────#",
    "build:prod": "npm run build:prod:libs && ng build --prod && npm run build:prod:server",
    "build:prod:libs": "npm run build:prod:core && npm run build:prod:shared && npm run build:prod:schemes",
    "build:prod:core": "ng build core --prod",
    "build:prod:shared": "ng build shared --prod && npm run copy:assets:shared",
    "build:prod:schemes": "ng build schemes --prod",
    "build:prod:server": "ng run portal:server:production && npm run webpack:prod:server && npm run generate:prerender",
    "webpack:prod:server": "webpack --progress --colors --env.prod",
    "──DEBUG──": "#────────────────DEBUG────────────────────────#",
    "debug:ssr": "node --inspect-brk=9229 dist/portal-server",
    "debug:prerender": "cd dist && node --inspect-brk=9229 portal-prerender",
    "──TESTS──": "#────────────────TESTS────────────────────────#",
    "test": "ng test",
    "test:schemes": "ng test schemes",
    "test:ci": "npm run test:ci:libs && ng test --watch=false --no-progress --code-coverage=true --browsers ChromeCI",
    "test:ci:libs": "npm run test:schemes -- --watch=false --no-progress --code-coverage=true --browsers ChromeCI",
    "───E2E───": "#─────────────────E2E─────────────────────────#",
    "e2e": "ng e2e",
    "e2e:ci": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.4",
    "@angular/cdk": "^6.2.0",
    "@angular/common": "^6.0.4",
    "@angular/compiler": "^6.0.4",
    "@angular/core": "^6.0.4",
    "@angular/flex-layout": "^6.0.0-beta.16",
    "@angular/forms": "^6.0.4",
    "@angular/http": "^6.0.4",
    "@angular/material": "^6.2.1",
    "@angular/platform-browser": "^6.0.4",
    "@angular/platform-browser-dynamic": "^6.0.4",
    "@angular/platform-server": "^6.0.4",
    "@angular/router": "^6.0.4",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^6.0.1",
    "@ngrx/entity": "^6.0.1",
    "@ngrx/router-store": "^6.0.1",
    "@ngrx/store": "^6.0.1",
    "@ngrx/store-devtools": "^6.0.1",
    "@nguniversal/common": "^6.0.0",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.5.4",
    "domino": "^2.0.2",
    "express-session": "^1.15.6",
    "hammerjs": "^2.0.8",
    "memorystore": "^1.6.0",
    "mkdirp": "^0.5.1",
    "ngx-cookie-service": "^1.0.10",
    "ngx-infinite-scroll": "^6.0.1",
    "openid-client": "^2.1.0",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular-devkit/build-ng-packagr": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.4",
    "@angular/language-service": "^6.0.4",
    "@angularclass/hmr": "^2.1.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.2",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^1.1.0",
    "ng-packagr": "^3.0.1",
    "protractor": "~5.3.0",
    "source-map-loader": "^0.2.3",
    "ts-loader": "^4.4.1",
    "ts-node": "~6.1.0",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "tslint": "~5.10.0",
    "typescript": "~2.7.2",
    "webpack-cli": "^3.0.3"
  }
}
