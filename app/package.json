{
  "name": "portal",
  "version": "0.0.0",
  "scripts": {
    "start": "ng serve",
    "start:hmr": "ng serve -c hmr --port 7000",
    "start:ssr": "node dist/portal-server",
    "test": "ng test --code-coverage=false",
    "test:ci": "ng test --watch=false --no-progress --code-coverage=true --browsers ChromeCI",
    "test:kube": "ng test --watch=false --no-progress --code-coverage=false --browsers ChromeCI",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "e2e:ci": "ng e2e",
    "e2e:kube": "ng e2e",
    "generate:prerender": "cd dist && node portal-prerender",
    "---DEV---": "#-----------------DEV-------------------------#",
    "build:dev": "ng build && npm run build:dev:server",
    "build:dev:server": "ng run portal:server && npm run webpack:dev:server && npm run generate:prerender",
    "webpack:dev:server": "npm run sourcemap:replace && webpack --progress --colors",
    "sourcemap:replace": "sed -i 's~webpack:///~~g' ./dist/portal-server/main.js.map",
    "--PROD---": "#----------------PROD-------------------------#",
    "build:prod": "ng build --prod && npm run build:prod:server",
    "build:prod:server": "ng run portal:server:production && npm run webpack:prod:server && npm run generate:prerender",
    "webpack:prod:server": "webpack --progress --colors --env.prod",
    "--DEBUG--": "#---------------DEBUG-------------------------#",
    "debug:ssr": "node --inspect-brk=9229 dist/portal-server",
    "debug:prerender": "cd dist && node --inspect-brk=9229 portal-prerender"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.4",
    "@angular/common": "^6.0.4",
    "@angular/compiler": "^6.0.4",
    "@angular/core": "^6.0.4",
    "@angular/forms": "^6.0.4",
    "@angular/http": "^6.0.4",
    "@angular/platform-browser": "^6.0.4",
    "@angular/platform-browser-dynamic": "^6.0.4",
    "@angular/platform-server": "^6.0.4",
    "@angular/router": "^6.0.4",
    "@nguniversal/common": "^6.0.0",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "core-js": "^2.5.4",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.4",
    "@angular/language-service": "^6.0.4",
    "@angularclass/hmr": "^2.1.3",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.2",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^1.1.0",
    "protractor": "~5.3.0",
    "source-map-loader": "^0.2.3",
    "ts-loader": "^4.4.1",
    "ts-node": "~6.1.0",
    "tslint": "~5.10.0",
    "typescript": "~2.7.2",
    "webpack-cli": "^3.0.3"
  }
}
