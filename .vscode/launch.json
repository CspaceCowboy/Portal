{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ng serve",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "ng serve",
            "url": "http://localhost:7000/#",
            "webRoot": "${workspaceFolder}/app",
            "userDataDir": false,
            "runtimeArgs": [
                "--user-data-dir=${workspaceFolder}/../karma"
            ]
        },
        {
            "name": "ng ssr",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "ng srr",
            "url": "http://localhost:7000/#",
            "webRoot": "${workspaceFolder}/app",
            "userDataDir": false,
            "env": {
                "PORT": "7000"
            },
            "runtimeArgs": [
                "--user-data-dir=${workspaceFolder}/../karma"
            ]
        },
        {
            "name": "ng test",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "ng test",
            "url": "http://localhost:9876/debug.html",
            "webRoot": "${workspaceFolder}/app",
            "userDataDir": false,
            "runtimeArgs": [
                "--user-data-dir=${workspaceFolder}/../karma"
            ]
        },
        {
            "name": "ng e2e",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "ng serve",
            "program": "${workspaceFolder}/app/node_modules/protractor/bin/protractor",
            "protocol": "inspector",
            "args": [
                "${workspaceFolder}/app/e2e/protractor.conf.js"
            ]
        }
    ]
}