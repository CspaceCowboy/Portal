{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "ng ssr:node/chrome",
            "configurations": [
                "ng ssr:node",
                "Chrome launch"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Chrome launch",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:7000/home",
            "webRoot": "${workspaceFolder}/app",
            "userDataDir": false,
            "runtimeArgs": [
                "--user-data-dir=${workspaceFolder}/../karma"
            ]
        },
        {
            "name": "ng serve:hmr",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "ng serve:hmr",
            "url": "http://localhost:7000/#",
            "webRoot": "${workspaceFolder}/app",
            "userDataDir": false,
            "runtimeArgs": [
                "--user-data-dir=${workspaceFolder}/../karma"
            ]
        },
        {
            "name": "ng ssr:chrome",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "ng ssr",
            "url": "http://localhost:7000/#",
            "webRoot": "${workspaceFolder}/app",
            "userDataDir": false,
            "runtimeArgs": [
                "--user-data-dir=${workspaceFolder}/../karma"
            ]
        },
        {
            "name": "ng ssr:node",
            "type": "node",
            "request": "launch",
            // "preLaunchTask": "ng build:dev",
            "cwd": "${workspaceFolder}/app",
            "runtimeExecutable": "npm",
            "port": 9229,
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "PORT": "7000"
            },
            "runtimeArgs": [
                "run",
                "debug:ssr"
            ]
        },
        {
            "name": "ng prerender",
            "type": "node",
            "request": "launch",
            // "preLaunchTask": "ng build:dev",
            "cwd": "${workspaceFolder}/app",
            "runtimeExecutable": "npm",
            "port": 9229,
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "runtimeArgs": [
                "run",
                "debug:prerender"
            ]
        },
        {
            "name": "ng test",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "ng test",
            "url": "http://localhost:9876/debug.html",
            "webRoot": "${workspaceFolder}/app",
            "userDataDir": false,
            "runtimeArgs": [
                "--user-data-dir=${workspaceFolder}/../karma"
            ]
        },
        {
            "name": "ng e2e",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "ng serve:hmr",
            "program": "${workspaceFolder}/app/node_modules/protractor/bin/protractor",
            "protocol": "inspector",
            "args": [
                "${workspaceFolder}/app/e2e/protractor.conf.js"
            ]
        }
    ]
}